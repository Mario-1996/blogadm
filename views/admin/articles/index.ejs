<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h2>Artigos</h2>
        <a class="btn btn-outline-success" href="/admin/articles/new" alt="nova artigo" title="nova categoria"> Nova Categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
              <% articles.forEach(article => { %>
                <tr>
                    <td><%=article.id%></td>
                    <td><%=article.title%></td>
                    <td><%=article.slug%></td>
                    <td><%=article.category.title%></td>
                    <td>
                        <a class="btn btn-warning" href="/admin/articles/edit/<%= article.id %>" title="Editar">Editar</a>
                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmarDeletar(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger" title="Excluir/Deletar">Deletar</button>
                        </form>
                    </td>
                </tr>
              <% }) %>
            </tbody>
        </table>
    </div>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmarDeletar(event, form) {
        event.preventDefault();
        var decision = confirm("Você deseja deletar esse Artigo ?")
        if(decision) {
            form.submit();
        }
    }
</script>